.chat-window
    &__content-item
        width: 100%
        display: flex
        margin-bottom: 20px
        box-sizing: border-box

    &__content-avatar
        position: relative
        margin-right: 10px

    &__avatar
        width: 50px
        height: 50px
        border-radius: 50%
        border: 1px solid #fd5

    &__content-name
        font-size: 16px
        font-family: PTS
        color: #2d2d2d
        margin-bottom: 5px

    &__content-message
        width: 100%
        font-size: 14px
        line-height: 20px
        font-family: PT
        color: #3d3c40

    &__content-date
        text-indent: 10px
        padding-left: 5px
        font-size: 13px
        color: #999
        font-family: robothin

    &__content-sending
        padding-top: 5px