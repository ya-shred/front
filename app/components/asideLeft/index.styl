.aside-left
	width 310px
	height 100%
	background #fff
	box-sizing border-box
	.search-user
		width 100%
		margin-top 20px
		padding 0 10px
		height 40px
		box-sizing border-box
		&__input
			width 100%
			height 100%
			display block
			padding 0 10px
			font-size: 14px
			border-radius 6px
			border 1px solid #e6e9f0
			box-sizing border-box
			font-family: PT
			color #2b2b2b
			&:focus
				outline none
				border 1px solid #fd5

.user-list
	width 100%
	box-sizing border-box
	&__item
		width 100%
		padding 15px 0 5px 10px
		box-sizing border-box
		display flex
	&__box-content
		width 100%
		display flex
		flex-direction column
		justify-content center
		border-bottom 1px solid #e6e9f0
	&__content
		display flex
		padding 0 10px
		justify-content space-between
		margin-bottom 5px
		&:last-child
			margin 0
	&__box-name
		max-width 170px
		position relative
	&__name
		font-size: 16px
		font-family: PTS
		text-overflow ellipsis
		overflow: hidden;
		white-space: nowrap;
		display block

	&__status
		width 6px
		height 6px
		position absolute
		border-radius 6px
		right -10px
		top 2px
		bottom 0
		left auto
		margin auto
		&.online
			background #00A000
		&.offline
			background #954121
	&__last-message
		font-size: 16px
		font-family: robothin
		text-overflow ellipsis
		overflow: hidden;
		white-space: nowrap;
		max-width 170px
		color #999
		&.new-message
			color #fd5
	&__current-new-message
		padding 3px 6px
		box-sizing border-box
		background #fd5
		font-size: 12px
		font-family: PT
		color #2d2d2d
		border-radius 50px

	&__date
		font-size: 15px
		color #999
		font-family: robothin